<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="crearEditarDebate">


    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:padding="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tema"
            tools:layout_editor_absoluteX="60dp"
            tools:layout_editor_absoluteY="275dp" />

        <EditText
            android:id="@+id/te_modelo_avion"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="50dp"
            android:ems="10"
            android:hint="Tema"
            android:inputType="text" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Quorum"
            tools:layout_editor_absoluteX="60dp"
            tools:layout_editor_absoluteY="275dp" />

        <EditText
            android:id="@+id/te_capacidad_avion"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="50dp"
            android:ems="10"
            android:hint="Quorum"
            android:inputType="number" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="DuraciÃ³n"
            tools:layout_editor_absoluteX="60dp"
            tools:layout_editor_absoluteY="275dp" />

        <EditText
            android:id="@+id/te_numserie_avion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:ems="10"
            android:hint="# min"
            android:inputType="number"
            android:textSize="18dp"
            tools:layout_editor_absoluteX="87dp"
            tools:layout_editor_absoluteY="228dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Lugar"
            tools:layout_editor_absoluteX="60dp"
            tools:layout_editor_absoluteY="275dp" />

        <EditText
            android:id="@+id/te_estado_avion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:ems="10"
            android:hint="Lugar"
            android:inputType="text"
            tools:layout_editor_absoluteX="119dp"
            tools:layout_editor_absoluteY="354dp" />

    </TableLayout>

    <TextView
        android:id="@+id/txt_modo_debate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mensaje"
        android:textColor="#090909"
        android:textColorHint="#FBFBFB"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_guardar_debate"
        android:layout_width="405dp"
        android:layout_height="0dp"
        android:layout_marginTop="36dp"
        android:backgroundTint="#1A13FF"
        android:text="Guardar Debate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout" />


</androidx.constraintlayout.widget.ConstraintLayout>