<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="crearEditarParticipante"

    >

    <TextView
        android:id="@+id/te_modo_ruta"
        android:layout_width="115dp"
        android:layout_height="40dp"

        android:layout_marginTop="24dp"
        android:text="Mensaje"
        android:textColor="#050505"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="150dp" />

    <TableLayout
        android:id="@+id/tableLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:padding="20dp"
        app:layout_constraintTop_toBottomOf="@+id/te_modo_ruta"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nickname"
            tools:layout_editor_absoluteX="72dp"
            tools:layout_editor_absoluteY="165dp" />

        <EditText
            android:id="@+id/tv_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:ems="10"
            android:hint="Nickname"
            android:inputType="text"
            tools:layout_editor_absoluteX="74dp"
            tools:layout_editor_absoluteY="192dp" />


        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Equipo"
            tools:layout_editor_absoluteX="68dp"
            tools:layout_editor_absoluteY="260dp" />

        <EditText
            android:id="@+id/tv_equipo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:ems="10"
            android:hint="Equipo"
            android:inputType="text"
            tools:layout_editor_absoluteX="68dp"
            tools:layout_editor_absoluteY="398dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Temas de Interés"
            tools:layout_editor_absoluteX="72dp"
            tools:layout_editor_absoluteY="165dp" />

        <EditText
            android:id="@+id/tv_temas_interes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:ems="10"
            android:hint="Temas de interés"
            android:inputType="text"
            tools:layout_editor_absoluteX="74dp"
            tools:layout_editor_absoluteY="192dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edad"
            tools:layout_editor_absoluteX="72dp"
            tools:layout_editor_absoluteY="165dp" />

        <EditText
            android:id="@+id/tv_edad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:ems="10"
            android:hint="# años"
            android:inputType="text"
            tools:layout_editor_absoluteX="74dp"
            tools:layout_editor_absoluteY="192dp" />


    </TableLayout>

    <Button
        android:id="@+id/btn_guardarParticipante"
        android:layout_width="405dp"
        android:layout_height="52dp"
        android:layout_marginTop="28dp"
        android:backgroundTint="#1A13FF"
        android:text="Guardar Participante"
        android:textColorHint="#C82323"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout2" />


</androidx.constraintlayout.widget.ConstraintLayout>